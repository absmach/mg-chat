{
    "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
    "files": {
        "includes": [
            "**",
            "!.next",
            "!node_modules",
            "!**/*.test.*"
        ]
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "recommended": true,
                "noNodejsModules": "off",
                "useImportExtensions": "off"
            },
            "performance": {
                "recommended": true,
                "useTopLevelRegex": "off"
            },
            "security": {
                "recommended": true
            },
            "style": {
                "recommended": true,
                "noDefaultExport": "off",
                "useFilenamingConvention": {
                    "level": "error",
                    "options": {
                        "filenameCases": [
                            "kebab-case"
                        ]
                    }
                }
            },
            "suspicious": {
                "recommended": true,
                "noConsole": "off",
                "noEvolvingTypes": "off",
                "noReactSpecificProps": "off",
                "noUnknownAtRules":"off"
            }
        },
        "includes": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80
    }
}
